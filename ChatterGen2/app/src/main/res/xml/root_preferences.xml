<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Font Settings">

        <EditTextPreference
            app:defaultValue="28"
            app:key="preference_fontsize_title"
            app:title="Title Font Size"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="12"
            app:entries="@array/font_sizes"
            app:entryValues="@array/font_sizes"
            app:key="preference_fontsize_contentarea"
            app:title="Content Area Font Size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>